generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Comment {
  id           Int       @id @unique @default(autoincrement())
  desc         String?
  createdAt    DateTime?
  userId       Int
  postId       Int
  commentUsers User      @relation(fields: [userId], references: [id]) //ASK
  posts        Post      @relation(fields: [postId], references: [id]) //ASK
}

model User {
  id         Int       @id @default(autoincrement())
  username   String
  email      String
  password   String
  name       String
  coverPic   String?
  profilePic String?
  city       String?
  website    String?
  posts      Post[] //ASK
  Comment    Comment[] //ASK
}

model Post {
  id        Int       @id @unique @default(autoincrement())
  desc      String?
  img       String?
  userId    Int
  createdAt DateTime?
  user      User      @relation(fields: [userId], references: [id]) //ASK
  Comment   Comment[] //ASK
}
